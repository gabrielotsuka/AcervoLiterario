<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="Acervo" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>dados.Livro</class>
        <class>dados.Revista</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:Acervo;create=true"/>
            <property name="javax.persistence.jdbc.user" value="user1"/>
            <property name="javax.persistence.jdbc.password" value="user1"/>
        </properties>
    </persistence-unit>
</persistence>